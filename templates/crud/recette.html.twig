<body>
<header>
    <div class="navbar navbar-dark bg-dark shadow-sm">
        <div class="container d-flex justify-content-between">
            <a href="#" class="navbar-brand d-flex align-items-center">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" stroke="currentColor"
                     stroke-linecap="round" stroke-linejoin="round" stroke-width="2" aria-hidden="true" class="mr-2"
                     viewBox="0 0 24 24" focusable="false">
                    <path d="M23 19a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h4l2-3h6l2 3h4a2 2 0 0 1 2 2z"/>
                    <circle cx="12" cy="13" r="4"/>
                </svg>
                <strong>API - Recette de cuisine</strong>
            </a>
        </div>
    </div>
</header>

<main role="main">
    <section class="jumbotron text-center">
        <div class="container">
            <img class="fit-picture"
                 src="/IMAGE/IMAGE.jpg"
                 width="200"
                 height="200"
                 alt="">

            <h1>Symfony API - Recette de cuisine</h1>
            <p class="lead text-muted">Nos artisans PHP aiment la cuisine</p>
        </div>
    </section>

    <div class="album py-5 bg-light">
        <div class="container">
            <a href="/recette_add/" type="button"
               class="btn btn-sm mb-2 btn-outline-dark">Ajouter une recette
            </a>

            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}

            <div class="row">
                {% if recettes | length >0 %}

                {% for recette in recettes %}
                    <div class="card col-md-5 mb-1 mr-1 shadow-sm">
                        <svg class="bd-placeholder-img card-img-top" width="100%" height="225"
                             xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice"
                             focusable="false"
                             role="img" aria-label="Placeholder: Thumbnail"><title>Image de recette à venir</title>
                            <rect width="100%" height="100%" fill="#55595c"/>
                            <text x="50%" y="50%" fill="#eceeef" dy=".3em">{{ recette.titre }}</text>
                        </svg>

                        <div class="card-body">
                            <p class="card-text">
                            <p> {{ recette.soustitre }}</p>
                            </p>

                            </p>
                            <div>
                                <div class="btn-group mb-2">
                                    <a href="/recette/{{ recette.id }}" type="button"
                                       class="btn btn-sm btn-outline-success">Voir
                                    </a>
                                    <a href="/recette_delfiche/{{ recette.id }}" type="button"
                                       class="btn btn-sm btn-outline-danger">Supprimer
                                    </a>
                                </div>
                            </div>
                            <div>
                                <div class="btn-group">
                                    <a href="/recette/edit/{{ recette.id }}" type="button"
                                       class="btn btn-sm btn-outline-warning">Modifier
                                    </a>
                                    <a href="/ingredient_add/{{ recette.id }}" type="button"
                                       class="btn btn-sm btn-outline-success">Ingrédients
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <p class="text-secondary">Nombre de recette {{ recettes | length }} en base de données</p>
        {% else %}
            <p>Il n'y a aucune recette de crée</p>
            {% endif %}
        </div>
    </div>
</main>

<footer class="text-muted">
    <div class="container">
        <p class="float-right btn btn-outline-primary mt-2">
            <a href="#">En haut</a>
        </p>
    </div>
</footer>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
        integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
        crossorigin="anonymous"></script>
</body>
</html>
